bash << 'EOF'
# Check Java
echo "Java: $(java -version 2>&1 | head -n 1)" || echo "Java is NOT configured correctly."

# Check Maven
echo "Maven: $(mvn -v 2>&1 | head -n 1)" || echo "Maven is NOT configured correctly."

# Check Android SDK
echo "Android SDK: $(adb --version 2>&1 | head -n 1)" || echo "Android SDK tools are NOT configured correctly."

# Check Android Build Tools
echo "Android Build Tools: $(aapt version 2>&1)" || echo "Android Build Tools are NOT configured correctly."

# Check Ruby (rbenv)
echo "Ruby: $(ruby -v 2>&1)" || echo "Ruby (rbenv) is NOT configured correctly."

# Check Environment Variables
echo -e "\nEnvironment Variables:"
echo "JAVA_HOME: $JAVA_HOME"
echo "MAVEN_HOME: $MAVEN_HOME"
echo "ANDROID_HOME: $ANDROID_HOME"
echo -e "PATH:\n$(echo "$PATH" | tr ':' '\n')"
EOF
